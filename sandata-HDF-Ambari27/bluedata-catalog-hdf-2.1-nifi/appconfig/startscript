#!/bin/bash
#
# Copyright 2016 (c) BlueData Software, Inc.
#
#

set -o pipefail
SELF=$(readlink -nf $0)
export CONFIG_BASE_DIR=$(dirname ${SELF})

source ${CONFIG_BASE_DIR}/logging.sh
source ${CONFIG_BASE_DIR}/utils.sh

if [[ "$1" == "--addnodes" ]]; then
    ## Nothing to do on the existing nodes when we receive this notification.
    exit 0
elif [[ "$1" == "--delnodes" ]]; then
    ## Nothing to do on the existing nodes when we receive this notification.
    exit 0
elif [[ "$1" == "--configure" ]]; then
    log "Starting configuration ... "

    ## Fall through to start the configuration.
else
    echo "ERROR: Unknown command line option(s): '$@'"
    exit 10
fi

# Indicate start of configuration to BD_VLIB
invoke_bdvcli --startconfiguration

source ${CONFIG_BASE_DIR}/macros.sh

# This macro automatically designates one node from the nodegroup as primary
AUTO_ASSIGN_PRIMARY

####################### AUTOGENERATED CODE STARTS BELOW #######################
#
[ ! -d '/etc/init.d/' ] && mkdir -vp /etc/init.d/
cp -rvf ${CONFIG_BASE_DIR}/Zookeeper-service /etc/init.d/Zookeeper-service

[ ! -d '/etc/init.d/' ] && mkdir -vp /etc/init.d/
cp -rvf ${CONFIG_BASE_DIR}/HDF-master /etc/init.d/HDF-master

[ ! -d '/opt/hdf/nifi-1.1.0.2.1.2.0-10/conf' ] && mkdir -vp /opt/hdf/nifi-1.1.0.2.1.2.0-10/conf
cp -rvf ${CONFIG_BASE_DIR}/zookeeper.properties /opt/hdf/nifi-1.1.0.2.1.2.0-10/conf/zookeeper.properties

[ ! -d '/etc/init.d/' ] && mkdir -vp /etc/init.d/
cp -rvf ${CONFIG_BASE_DIR}/configure_zookeeper.sh /etc/init.d/configure_zookeeper.sh

[ ! -d '/etc/init.d/' ] && mkdir -vp /etc/init.d/
cp -rvf ${CONFIG_BASE_DIR}/HDF-slave /etc/init.d/HDF-slave

[ ! -d '/etc/init.d/' ] && mkdir -vp /etc/init.d/
cp -rvf ${CONFIG_BASE_DIR}/start_zookeeper.sh /etc/init.d/start_zookeeper.sh

[ ! -d '/opt/hdf/nifi-1.1.0.2.1.2.0-10/conf' ] && mkdir -vp /opt/hdf/nifi-1.1.0.2.1.2.0-10/conf
cp -rvf ${CONFIG_BASE_DIR}/state-management.xml /opt/hdf/nifi-1.1.0.2.1.2.0-10/conf/state-management.xml

[ ! -d '/etc/init.d/' ] && mkdir -vp /etc/init.d/
cp -rvf ${CONFIG_BASE_DIR}/start_Nifi.sh /etc/init.d/start_Nifi.sh

[ ! -d '/etc/init.d/' ] && mkdir -vp /etc/init.d/
cp -rvf ${CONFIG_BASE_DIR}/start_slave_nifi.sh /etc/init.d/start_slave_nifi.sh

[ ! -d '/opt/hdf/nifi-1.1.0.2.1.2.0-10/conf' ] && mkdir -vp /opt/hdf/nifi-1.1.0.2.1.2.0-10/conf
cp -rvf ${CONFIG_BASE_DIR}/nifi.properties /opt/hdf/nifi-1.1.0.2.1.2.0-10/conf/nifi.properties

REPLACE_PATTERN @@@NIFI_HOST@@@ /opt/hdf/nifi-1.1.0.2.1.2.0-10/conf/nifi.properties GET_NODE_FQDN


chmod -v 777 /etc/init.d/start_Nifi.sh
chown -v bluedata /etc/init.d/start_Nifi.sh
chmod -v 777 /etc/init.d/start_zookeeper.sh
chown -v bluedata /etc/init.d/start_zookeeper.sh
chmod -v 777 /etc/init.d/HDF-slave
chown -v bluedata /etc/init.d/HDF-slave
chmod -v 777 /etc/init.d/Zookeeper-service
chown -v bluedata /etc/init.d/Zookeeper-service
chmod -v 777 /etc/init.d/HDF-master
chown -v bluedata /etc/init.d/HDF-master
chmod -v 777 /etc/init.d/start_slave_nifi.sh
chown -v bluedata /etc/init.d/start_slave_nifi.sh
chmod 777 ${CONFIG_BASE_DIR}/start_Nifi.sh
sh ${CONFIG_BASE_DIR}/start_Nifi.sh && (echo ${CONFIG_BASE_DIR}/start_Nifi.sh successful || exit 1)

chmod 777 ${CONFIG_BASE_DIR}/start_slave_nifi.sh
sh ${CONFIG_BASE_DIR}/start_slave_nifi.sh && (echo ${CONFIG_BASE_DIR}/start_slave_nifi.sh successful || exit 1)

chmod 777 ${CONFIG_BASE_DIR}/start_zookeeper.sh
sh ${CONFIG_BASE_DIR}/start_zookeeper.sh && (echo ${CONFIG_BASE_DIR}/start_zookeeper.sh successful || exit 1)

chmod 777 ${CONFIG_BASE_DIR}/configure_zookeeper.sh
sh ${CONFIG_BASE_DIR}/configure_zookeeper.sh && (echo ${CONFIG_BASE_DIR}/configure_zookeeper.sh successful || exit 1)


REGISTER_START_SERVICE_SYSV Zookeeper-service Zookeeper-service
REGISTER_START_SERVICE_SYSV HDF-slave HDF-slave
REGISTER_START_SERVICE_SYSV HDF-master HDF-master
